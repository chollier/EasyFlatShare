
<div class="page-header">
	<h1><%= link_to @bill.name, @bill %> <small><%= link_to 'Edit', edit_bill_path(@bill) %></small></h1>
</div>




<div class="row">
    <div class="span9">
    	<% if @bill.expenses.present? %>
    	<table class="table table-striped table-hover">
    		<thead>
    			<tr>
    				<th>Date</th>
    				<th>Name</th>
    				<th>By</th>
    				<th>Amount</th>
    				<th>Actions</th>
    			</tr>
    		</thead>

    		<tbody>
          <% @bill.expenses[0..@bill.expenses.size-3].each do |expense| %>
            <tr>
              <td><%= expense.date.strftime("%m/%d/%Y") %></td>
              <td><%= expense.name %></td>
              <td><%= link_to(expense.creator.username, expense.creator) if expense.creator %></td>
              <td><%= expense.amount %></td>
              <td>lala</td>
            </tr
          <% end %> 
        </tbody>

    	</table>
    	<% else %>
    	<div class="hero-unit">
  <h4>Oups !</h4>
  <p>You do not have added any expense yet, try creating your <%= link_to "first expense", new_bill_expense_path(@bill) %>.</p>
</div>
    	<% end %>

    </div>
    <div class="span3">
      <!-- Button to trigger modal -->
      <p>
        <a href="#addExpense" role="button" class="btn btn-primary btn-large" data-toggle="modal">Add Expense</a>
      </p>
       
      <!-- Modal -->
        <div id="addExpense" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="addExpenseLabel" aria-hidden="true">

          <%= render 'expenses/form' %>

      </div>

      <hr class="soften" />
      <h4>Users</h4>
      <p>There's no user for now (except you), you should invite your roomates.</p>
      <hr class="soften" />
      <h4>Stats</h4>
      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
      tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
      quis nostrud exercitation ullamco laboris</p>
      <hr class="soften" />
      <h4>Infos</h4>
      <p>
      	<small>
      		This bills was created by <%= link_to @bill.creator.username, @bill.creator %> on <%= @bill.created_at.strftime("%d/%m/%Y") %>.
      	</small>
      </p>

    </div>
  </div>

