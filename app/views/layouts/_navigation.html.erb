<%= link_to "Home", root_path, :class => 'brand' %>
<ul class="nav ">
<% if user_signed_in? %>
  <li class="dropdown<%= ' active' if controller_name == "bills" %>">
    <%= link_to 'Bills  <b class="caret"></b>'.html_safe, bills_path, { :class => "dropdown-toggle",  "data-toggle" => "dropdown" } %>
    <ul class="dropdown-menu" role="menu" aria-labelledby="bills-dropdown">
      <% current_user.bills.each do |bill| %>
        <li><%= link_to bill.name, bill %></li>
      <% end %>
      <li class="divider"></li>
      <li><%= link_to "Manage bills", bills_path %>
    </ul>
  </li>
<% end %>
</ul>

<ul class="nav pull-right">
  <% if user_signed_in? %>
    <li class="dropdown">

      <%= link_to "#{image_tag(current_user.fb_profile_pic, size: "20x20")}&nbsp;&nbsp;&nbsp;<strong>#{current_user.username}</strong>".html_safe, '', { :class => "dropdown-toggle",  "data-toggle" => "dropdown" } %>
      <ul class="dropdown-menu" role="menu" aria-labelledby="profile-dropdown">
        <li><%= link_to 'My profile', user_path(current_user) %></li>
        <li class="divider"></li>
        <li><%= link_to('Edit account', edit_user_registration_path) %></li>
        <li><%= link_to('Logout', destroy_user_session_path, :method=>'delete') %></li>

      </ul>
    </li>
  <% else %>
    <li><%= link_to('Login', new_user_session_path)  %></li>
    <li><%= link_to('Sign up', new_user_registration_path)  %></li>

  <% end %>


</ul>


